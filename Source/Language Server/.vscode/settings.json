{
	"editor.insertSpaces": true,
	"tslint.enable": true,
	"typescript.tsc.autoDetect": "off",
	"typescript.preferences.quoteStyle": "double",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		"**/out": true,
		"**/dist": true,
	},
	"antlr4.atn.maxLabelCount": 4,
    "antlr4.generation": {
        "mode": "external",
        "outputDir": "./",
        "language": "TypeScript",
        "listeners": true,
        "visitors": true
    },
    "cSpell.ignoreWords": [
        "antlr"
    ]
}