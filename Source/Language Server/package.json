{
	"name": "z80-assembler",
	"description": "A Z80 Assembler IDE",
	"author": "Marc Jacobi",
	"license": "MIT",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/obiwanjacobi/Zingularity"
	},
	"publisher": "Jacobi Software",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:z80asm"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "z80asm",
				"extensions": [
					".z80"
				]
			}
		],
		"grammars": [
			{
				"language": "z80asm",
				"scopeName": "source.z80asm",
				"path": "./syntaxes/z80.tm.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"z80assembler.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"z80assembler.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "jest",
		"version": "tsc -v"
	},
	"devDependencies": {
		"@types/jest": "^24.0.13",
		"@types/node": "^8.0.0",
		"jest": "^24.8.0",
		"ts-jest": "^24.0.2",
		"ts-node": "^8.1.0",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5",
		"vscode": "^1.1.34"
	},
	"dependencies": {},
	"jest": {
		"roots": [
			"./server/out/test/"
		]
	}
}
