{
	"name": "zingularity",
	"description": "Zingularity, a Z80 Assembler IDE",
	"author": "Marc Jacobi",
	"license": "LGPL-2.1-only",
	"version": "0.0.6",
	"repository": {
		"type": "git",
		"url": "https://github.com/obiwanjacobi/Zingularity.git"
	},
	"publisher": "JacobiSoftware",
	"categories": [
		"Programming Languages",
		"Formatters"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.33.0"
	},
	"activationEvents": [
		"onLanguage:z80asm"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "z80asm",
				"extensions": [
					".z80",
					".asm",
					".inc",
					".S"
				]
			}
		],
		"grammars": [
			{
				"language": "z80asm",
				"scopeName": "source.z80asm",
				"path": "./syntaxes/z80.tm.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Zingularity configuration",
			"properties": {
				"zingularity.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 999,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"zingularity.newline": {
					"scope": "resource",
					"type": "string",
					"default": "\r\n",
					"description": "What new-line character(s) to use when reformatting."
				},
				"zingularity.columnTabs": {
					"scope": "resource",
					"type": "number[]",
					"default": [
						0,
						2,
						8
					],
					"description": "Formats the document in a 3-column layout using these number of tabs for each column."
				},
				"zingularity.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd ..",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "jest",
		"test:w": "jest --watch",
		"webpack": "npm run clean:out && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"package:prod": "npm run clean:modules && npm install && vsce package",
		"package": "vsce package",
		"publish": "vsce publish",
		"clean:out": "rimraf client/out && rimraf server/out",
		"clean:modules": "git clean -xfd node_modules",
		"antlr": "antlr4ts -visitor .\\server\\src\\z80asm\\z80asm.g4"
	},
	"jest": {
		"roots": [
			"./server/out/_test/"
		]
	},
	"devDependencies": {
		"@types/jest": "^24.0.13",
		"@types/node": "^8.0.0",
		"antlr4ts-cli": "^0.5.0-alpha.3",
		"file-loader": "^4.2.0",
		"jest": "^24.8.0",
		"rimraf": "^2.6.3",
		"ts-jest": "^24.0.2",
		"ts-loader": "^6.0.4",
		"ts-node": "^8.1.0",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5",
		"vscode": "^1.1.34",
		"webpack": "^4.35.0",
		"webpack-cli": "^3.3.4"
	},
	"dependencies": {
		"acorn": "^7.1.0"
	}
}
