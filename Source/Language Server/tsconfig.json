{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"rootDir": "src",
		"lib": [ "es6" ],
		"sourceMap": true,
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
    	"moduleResolution": "node"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "./client" },
		{ "path": "./server" }
	]
}